/*Faça um programa que calcule o índice de massa corpórea e imprima o resultado. Utilize a fórmula: IMC = PESO / (ALTURA * ALTURA).*/

import java.util.Scanner;

public class outros3 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double corporea;
        double peso;
        double altura;

        System.out.println("Digite o seu peso");
         peso = sc.nextDouble();

        System.out.println("Digite sua altura: ");
         altura = sc.nextDouble();

         corporea = peso / (altura * altura);

         System.out.println("Sua massa córporea é " + corporea);

    }
}

