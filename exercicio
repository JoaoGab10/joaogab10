/* Faça um algoritmo que calcule e mostre a área de um trapézio. Sabe-se que: A = (base maior + base menor)*altura)/2 */


import java.util.Scanner;

public class outros6 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

       double area;
       double altura;
       System.out.println("Digite a altura do seu trapezio ");
       altura = sc.nextDouble();

       double basemaior, basemenor;
       System.out.println("Qual a area maior do seu trapezio ");
       basemaior = sc.nextDouble();

       System.out.println("Qual a area menor do seu trapezio");
       basemenor =sc.nextDouble();

       area = (basemaior + basemenor * altura) /2;
       System.out.println("A area do seu trapezio é " + area);
      
    }
}

