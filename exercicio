/*Faça um programa que calcule a área de um triângulo, considerando a fórmula AREA = (BASE * ALTURA) / 2. 
Utilize as variáveis AREA, BASE e ALTURA e os operadores aritméticos de multiplicação e divisão. */

import java.util.Scanner;

public class outros1 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double area, base, altura;

        System.out.println("Digite a altura do triangulo: ");
        altura = sc.nextDouble();

        System.out.println("Digite a base do triangulo: ");
        base = sc.nextDouble();

        area = (base * altura) / 2;
        System.out.println("A base do seu triangulo é " + area );

    }
}

